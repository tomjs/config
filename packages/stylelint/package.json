{
  "name": "@tomjs/stylelint",
  "version": "2.6.1",
  "description": "stylelint config for tomjs",
  "keywords": [
    "stylelint",
    "lint",
    "config",
    "style",
    "css",
    "less",
    "scss",
    "vue"
  ],
  "author": {
    "name": "Tom Gao",
    "email": "tom@tomgao.cc"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomjs/config.git",
    "directory": "packages/stylelint"
  },
  "homepage": "https://github.com/tomjs/config/tree/main/packages/stylelint#readme",
  "files": [
    "es",
    "lib"
  ],
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./es/index.js"
    },
    "./config": {
      "require": "./lib/config.js",
      "import": "./es/config.js"
    }
  },
  "scripts": {
    "build": "npm run clean && vite build",
    "clean": "rimraf ./es ./lib",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "postcss": "^8.4.39",
    "postcss-html": "^1.7.0",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9",
    "stylelint-config-property-sort-order-smacss": "^10.0.0",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.0"
  },
  "peerDependencies": {
    "prettier": "^3.0.0",
    "stylelint": "^16.3.1"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.12.0"
  }
}
